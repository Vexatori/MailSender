<UserControl x:Class="MailSender.Controls.TabChanger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSender.Controls"
             mc:Ignorable="d" Height="30" Width="84">
    <UniformGrid Rows="1">
        <Button x:Name="btnLeft" Click="BtnLeft_Click">
            <Button.Content>
                <Image Source="../img/left.png"/>
            </Button.Content>
        </Button>
        <Button x:Name="btnRight" Click="BtnRight_Click">
            <Button.Content>
                <Image Source="../img/right.png"/>
            </Button.Content>
        </Button>
    </UniformGrid>
</UserControl>
